<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cound"
    tools:context=".RegistrationForm">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#777777"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="goMainActivity"
                app:srcCompat="@drawable/ic_home_white_24dp"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_format_list_numbered_white_24dp" />


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="launchList"
                app:srcCompat="@drawable/ic_view_list_white_24dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration Form"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Enter Details"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/my_name"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/backgrou_for_registration"
                    android:ems="10"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColorHint="@android:color/black" />

                <EditText
                    android:id="@+id/my_mobile_number"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/backgrou_for_registration"
                    android:ems="10"
                    android:hint="Enter Mobile No"
                    android:inputType="phone"
                    android:paddingLeft="20dp"
                    android:textColorHint="@android:color/black" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Select Event"

                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technical"
                    android:background="@drawable/background_event_banner"

                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <CheckBox
                    android:background="@drawable/backgrou_for_registration"
                    android:textAlignment="center"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:id="@+id/thirsty_coders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thirsty Coders" />

                <CheckBox

                    android:id="@+id/thugs_of_codistan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Thugs Of Codistan" />

                <CheckBox
                    android:textAlignment="center"
                    android:id="@+id/hackathon"
                    android:background="@drawable/backgrou_for_registration"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hackothon" />

                <CheckBox
                    android:textAlignment="center"
                    android:id="@+id/bug_off"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bug Off" />

                <CheckBox
                    android:id="@+id/hack_the_mystery"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/backgrou_for_registration"
                    android:text="Hack The Mystery" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-Technical"
                    android:background="@drawable/background_event_banner"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/beats"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:background="@drawable/backgrou_for_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Beats" />

                <CheckBox
                    android:id="@+id/box_office"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Box Office" />

                <CheckBox
                    android:id="@+id/stranger_things"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:background="@drawable/backgrou_for_registration"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Stranger Things" />


                <CheckBox
                    android:id="@+id/secret_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Secret Room"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="19dp" />



                <CheckBox
                    android:id="@+id/fifa"
                    android:background="@drawable/backgrou_for_registration"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="FIFA" />

                <CheckBox
                    android:id="@+id/cs"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CS" />

                <CheckBox
                    android:id="@+id/may_mayers"
                    android:textAlignment="center"
                    android:background="@drawable/backgrou_for_registration"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="May Mayers" />
                <TextView
                    android:background="@drawable/background_event_banner"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Side Events"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/bulls_eye"
                    android:textAlignment="center"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bull's Eye"/>

                <CheckBox
                    android:id="@+id/food_tycon"
                    android:textAlignment="center"
                    android:background="@drawable/backgrou_for_registration"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Food Tycon" />

                <CheckBox
                    android:id="@+id/twister"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Twister" />

                <CheckBox
                    android:id="@+id/box_and_lies"
                    android:textSize="19dp"
                    android:background="@drawable/backgrou_for_registration"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Box and Lies" />

                <CheckBox
                    android:id="@+id/spot_photo"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Spot Photo" />

                <Button
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/submit_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_button"
                    android:onClick="submit_registration"
                    android:text="Submit" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>